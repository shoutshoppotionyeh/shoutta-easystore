              url: '/new_cart/voucher',
              data: {
                category: 'remove',
                order_discount_id: $(this).data( "discount-id")
              },
              dataType: 'json',
              success: function(data){
                // console.log(data);
                theme.cartDrawer(data);
                $('#CartTemplate').removeClass('is-loading');
              },
